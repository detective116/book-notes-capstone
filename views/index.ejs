<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>My Book Notes</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <style>
      /* Optional custom tweaks */
      .book-cover {
        height: 150px;
        object-fit: cover;
      }
    </style>
  </head>

  <body class="bg-light">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
      <div class="container">
        <a class="navbar-brand fw-bold" href="/">BookNotes</a>
        <div>
          <a href="/add" class="btn btn-primary">Add New Book</a>
        </div>
      </div>
    </nav>

    <!-- Main container -->
    <div class="container mt-4">
      <h1 class="mb-4">Books I‚Äôve Read</h1>

      <!-- Sort dropdown -->
      <form
        method="get"
        action="/"
        class="row row-cols-lg-auto g-3 align-items-center mb-3"
      >
        <div class="col-12">
          <label class="col-form-label" for="sort">Sort by:</label>
        </div>
        <div class="col-12">
          <select
            class="form-select"
            name="sort"
            id="sort"
            onchange="this.form.submit()"
          >
            <option value="read_date" selected>Recency</option>
            <option value="rating">Rating</option>
            <option value="title">Title</option>
          </select>
        </div>
      </form>

      <!-- No‚Äëbooks message -->
      <% if (books.length === 0) { %>
      <div class="alert alert-info">No books yet.</div>
      <% } else { %>

      <!-- Book list -->
      <div class="row g-4">
        <% books.forEach((book) => { %>
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 shadow-sm">
            <% if (book.cover_url) { %>
            <img
              src="<%= book.cover_url %>"
              alt="cover"
              class="card-img-top book-cover"
            />
            <% } %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= book.title %></h5>
              <h6 class="card-subtitle mb-2 text-muted">
                <%= book.author %>
              </h6>

              <% if (book.rating) { %>
              <p class="mb-1">Rating: <%= book.rating %>/5</p>
              <% } %>

              <% if (book.review) { %>
              <p class="card-text flex-grow-1"><%= book.review %></p>
              <% } %>

              <% if (book.read_date) { %>
              <p class="text-end text-muted small mb-2">
                Read on: <%= book.read_date.toDateString() %>
              </p>
              <% } %>

              <div class="d-flex justify-content-between">
                <a href="/edit/<%= book.id %>" class="btn btn-sm btn-outline-primary">
                  ‚úèÔ∏è Edit
                </a>
                <form
                  action="/delete/<%= book.id %>"
                  method="POST"
                  onsubmit="return confirm('Delete this book?');"
                >
                  <button class="btn btn-sm btn-outline-danger" type="submit">
                    üóëÔ∏è Delete
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
      <% } %>
    </div>

    <!-- Bootstrap JS (optional, for dropdowns/modals) -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>
